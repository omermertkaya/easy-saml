                                            <% if (user.samlRequestXML) { %>
                                                <div class="xml-container">
                                                    <button class="btn btn-sm btn-light border btn-copy"
                                                        onclick="copyToClipboard('reqXmlCode', this)">
                                                        <i class="bi bi-clipboard"></i> Kopyala
                                                    </button>
                                                    <pre class="mb-0 rounded"
                                                        style="max-height: 400px; overflow-y: auto;"><code id="reqXmlCode" class="language-xml small"><%= user.samlRequestXML %></code></pre>
                                                </div>
                                                <div class="mt-2 small text-muted">
                                                    <i class="bi bi-info-circle me-1"></i> Bu XML, giriş yaparken
                                                    Identity Provider'a gönderilen <code>AuthnRequest</code> mesajıdır.
                                                </div>

                                                <!-- Request Detay Tablosu (JS ile doldurulur) -->
