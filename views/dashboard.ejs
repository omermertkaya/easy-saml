    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Highlight.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/highlight.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/languages/xml.min.js"></script>

    <script>
        // Basit XML Formatlayıcı
        function formatXml(xml) {
            let formatted = '';
            let reg = /(>)(<)(\/*)/g;
            xml = xml.replace(reg, '$1\r\n$2$3');
            let pad = 0;
            xml.split('\r\n').forEach(function (node, index) {
                let indent = 0;
                if (node.match(/.+<\/\w[^>]*>$/)) {
                    indent = 0;
                } else if (node.match(/^<\/\w/)) {
                    if (pad != 0) {
                        pad -= 1;
                    }
                } else if (node.match(/^<\w[^>]*[^\/]>.*$/)) {
                    indent = 1;
                } else {
                    indent = 0;
                }

                let padding = '';
                for (let i = 0; i < pad; i++) {
                    padding += '  ';
                }

                formatted += padding + node + '\r\n';
                pad += indent;
            });
            return formatted;
        }

        // Kopyala Fonksiyonu
        function copyToClipboard(elementId, btnElement) {
            const codeBlock = document.getElementById(elementId);
            const text = codeBlock.innerText; // innerText, formatlanmış halini alır

            navigator.clipboard.writeText(text).then(() => {
                const originalHtml = btnElement.innerHTML;
                btnElement.innerHTML = '<i class="bi bi-check2"></i> Kopyalandı';
                btnElement.classList.remove('btn-light');
                btnElement.classList.add('btn-success', 'text-white');

                setTimeout(() => {
                    btnElement.innerHTML = originalHtml;
                    btnElement.classList.add('btn-light');
                    btnElement.classList.remove('btn-success', 'text-white');
                }, 2000);
            }).catch(err => {
                console.error('Kopyalama başarısız:', err);
                alert('Kopyalama başarısız oldu.');
            });
        }

        document.addEventListener('DOMContentLoaded', (event) => {
            // Tüm XML kod bloklarını bul ve formatla
            document.querySelectorAll('code.language-xml').forEach((block) => {
                // Ham içeriği al (EJS ile basılan)
                let rawXml = block.innerHTML;
                // HTML Entity decode işlemi (simple way for basic XML chars)
                const textarea = document.createElement('textarea');
                textarea.innerHTML = rawXml;
                let decodedXml = textarea.value;

                if (decodedXml && decodedXml.trim().startsWith('<')) {
                    // Pretty Print
                    block.textContent = formatXml(decodedXml);
                }

                // Highlight
                hljs.highlightElement(block);
            });

            // Parse SAML Request Details
            parseAndDisplayRequestDetails();
        });

        function parseAndDisplayRequestDetails() {
            try {
                // Get raw XML from the code block (it might be formatted now)
                const codeBlock = document.getElementById('reqXmlCode');
                if (!codeBlock) return;

                let rawXml = codeBlock.innerText;
                // Create a parser
                const parser = new DOMParser();
                const xmlDoc = parser.parseFromString(rawXml, "text/xml");

                // Handle namespaces loosely
                const authnRequest = xmlDoc.getElementsByTagName("AuthnRequest")[0] ||
                    xmlDoc.getElementsByTagName("samlp:AuthnRequest")[0] ||
                    xmlDoc.documentElement; // Fallback if root is the element

                if (authnRequest) {
                    document.getElementById('reqId').innerText = authnRequest.getAttribute('ID') || '-';
                    document.getElementById('reqTime').innerText = authnRequest.getAttribute('IssueInstant') || '-';
                    document.getElementById('reqDest').innerText = authnRequest.getAttribute('Destination') || '-';

                    const issuer = xmlDoc.getElementsByTagName("Issuer")[0] ||
                        xmlDoc.getElementsByTagName("saml:Issuer")[0];
                    if (issuer) {
                        document.getElementById('reqIssuer').innerText = issuer.textContent;
                    }
                }
            } catch (e) {
                console.error("Error parsing SAML Request details:", e);
            }
        }
    </script>
</body>

